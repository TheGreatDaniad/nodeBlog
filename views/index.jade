extends layout

block content
  .ui.three.column.stackable.grid
    for post in posts
      .column
        .ui.raised.segment
          img(src='/#{post.imagePath}',heigth="150px",width="185px")
          a(href="/posts/#{post._id}")
            h1 #{post.title}
          h6 published on #{moment(post.date).format("MM-DD-YYYY")}
          !{post.body}
 

